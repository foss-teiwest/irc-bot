	tcase_add_unchecked_fixture(tc1_2, open_read, close_read);
	tcase_add_unchecked_fixture(tc1_3, open_write, close_write);
	curl_global_init(CURL_GLOBAL_ALL);

#main-post
	curl_global_cleanup();
	return nf == 0 ? 0 : 1;
